<!DOCTYPE html>
<html>
  <head>
    <%- include('../parts/head'); %>
  </head>
  <body>

    <%- include('../parts/navbar'); %>


    <div class="container mt-5">
        <div class="row">
            <div class="col-lg-8">
                <!-- Post content-->
                <article>
                    <!-- Post header-->
                    <header class="mb-4">
                        <!-- Post title-->
                        <h1 class="fw-bolder mb-1"><%= title %></h1>
                        <div class="text-muted fst-italic mb-2">Created by Benjamin Rycroft</div>
                    </header>
                    <!-- Preview image figure-->
                    <!-- Post content-->
                    <section class="mb-5">

                        <p class="fs-5 mb-4">This is a blogging site that I made to learn node js.</p>
                        <div class="clearfix">
                          <h2 class="float-start">Blogs</h2>
                          <a href="/create" type="button" class="btn btn-primary float-end">Create a blog</a>
                        </div>


                        <br>
                        <div class="row">
                          <% for (let i=0; i<blogs.length; i++){ %>
                            <div class="card m-1" style="width: 15rem;">
                              <img class="card-img-top" src="<%- blogs[i].image %>" alt="">
                              <div class="card-body">
                                <a class="link-dark stretched-link" href="<%- blogs[i].url; %>"></a>
                                <h5 class="card-title"><%= blogs[i].title; %></h5>
                                <div class="text-muted fst-italic mb-1 ">By: <%= users[i].username; %> Role:<%= users[i].role; %></div>
                              </div>
                            </div>
                          <% } %>

                        </div>
                    </section>
                </article>
            </div>
            <!-- Side widgets-->
            <div class="col-lg-4">
                <!-- Search widget-->
                <%- include('../parts/search'); %>

            </div>
        </div>
    </div>
    <%- include('../parts/foot'); %>
  </body>
</html>
