<!DOCTYPE html>
<html>
  <head>
    <%- include('../parts/head'); %>
  </head>
  <body>

    <%- include('../parts/navbar'); %>


    <div class="container mt-5">
        <div class="row">
            <div class="col-lg-8">
                <!-- Post content-->
                <article>
                    <!-- Post header-->
                    <header class="mb-4">
                        <!-- Post title-->
                        <h1 class="fw-bolder mb-1">Serch results for "<%= query %>"</h1>
                        <div class="text-muted fst-italic mb-2">Created by Benjamin Rycroft</div>
                    </header>
                    <!-- Post content-->
                    <section class="mb-5">

                        <h2>Blogs</h2>
                        <br>

                        <% for (let i=0; i<blogs.length; i++){ %>
                          <div class="d-flex" style="transform: rotate(0);">
                              <div class="flex-shrink-0"><img class="rounded-circle" src="https://dummyimage.com/50x50/ced4da/6c757d.jpg" alt="..." /></div>
                              <div class="ms-3 " >
                                  <a class="link-dark stretched-link" href="<%- blogs[i].url; %>"></a> <%= blogs[i].title; %>
                                  <div class="text-muted fst-italic mb-1 ">By: <%= blogUsers[i].username; %> Role:<%= blogUsers[i].role; %></div>
                              </div>
                          </div>
                          <br>
                        <% } %>
                        <br>

                        <h2>Users</h2>
                        <br>

                        <% for (let i=0; i<users.length; i++){ %>
                          <div class="d-flex" style="transform: rotate(0);">
                              <div class="ms-3 " >
                                <a class="link-dark stretched-link" href="<%- users[i].url; %>"></a><%= users[i].username; %>
                                <div class="text-muted fst-italic mb-1 ">Role: <%= users[i].role; %></div>
                              </div>
                          </div>
                          <br>
                        <% } %>
                        <br>

                        <h2>Comments</h2>
                        <br>

                        <% for (let i=0; i<comments.length; i++){ %>
                          <div class="d-flex" style="transform: rotate(0);">
                              <div class="flex-shrink-0"><img class="rounded-circle" src="https://dummyimage.com/50x50/ced4da/6c757d.jpg" alt="..." /></div>
                              <div class="ms-3 " >
                                  <a class="link-dark stretched-link" href="<%- commentBlogs[i].url; %>"></a> <%= comments[i].body; %>
                                  <div class="text-muted fst-italic mb-1 ">Found in: <%= commentBlogs[i].title; %></div>
                              </div>
                          </div>
                          <br>
                        <% } %>


                    </section>
                </article>
            </div>
            <!-- Side widgets-->
            <div class="col-lg-4">
                <!-- Search widget-->
                <%- include('../parts/search'); %>

            </div>
        </div>
    </div>
    <%- include('../parts/foot'); %>
  </body>
</html>
