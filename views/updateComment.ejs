
<!DOCTYPE html>
<html>
  <head>
    <title>New Blog</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <% if (errors) { %>
      <ul>
        <% errors.forEach(function(error){ %>
          <li><%= error; %></li>
          <% }); %>
      </ul>
    <% } %>


    <form action="/blogs/<%- comment.blog %>/comment/<%- comment._id %>/update" method="post">
      <label for="body">Enter name: </label>
      <input id="body" type="text" name="body" value="<%= comment.body %>"/>

      <input type="submit" value="OK" />
    </form>
  </body>
</html>
